{
  "rewrites": [
    {
      "source": "/en/:path*",
      "destination": "/:path*"
    },
    {
      "source": "/fr/:path*",
      "destination": "/:path*"
    },
    {
      "source": "/ar/:path*",
      "destination": "/:path*"
    },
    {
      "source": "/:path*",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ]
}
