{
  "routes": [
    {
      "src": "/(en|fr|ar)/(.*)", 
      "dest": "/$2" 
    },
    {
      "src": "/(en|fr|ar)", 
      "dest": "/" 
    },
    {
      "src": "/(.*)", 
      "dest": "/" 
    }
  ],
  "rewrites": [
    {
      "source": "/static/(.*)", 
      "destination": "/static/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ]
}
